@model ControleDeEstoque.Models.Usuario

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <h4>Usuário</h4>
                <hr />
                <label asp-for="EmaildoUsuario" class="control-label"></label>
                <input type="email" asp-for="EmaildoUsuario" class="form-control" />
                <span asp-validation-for="EmaildoUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Login" class="control-label"></label>
                <input asp-for="Login" class="form-control" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Senha" class="control-label"></label>
                <input asp-for="Senha" class="form-control" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PerfilUsuario" class="control-label"></label>
                <select asp-for="PerfilUsuario" asp-items="Html.GetEnumSelectList<PerfilUsuario>()" class="form-control"><option>Selecione</option></select>
                <span asp-validation-for="PerfilUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataCadastro" class="control-label"></label>
                <input asp-for="DataCadastro" class="form-control" />
                <span asp-validation-for="DataCadastro" class="text-danger"></span>
            </div>
           <div class="form-group pb-4">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a class="btn btn-outline-info" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
