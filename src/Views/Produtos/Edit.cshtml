@model ControleDeEstoque.Models.Produto

@{
    ViewData["Title"] = "Edit";
}


<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h4>Produto</h4>
            <hr />
            <div class="form-group">
                <label asp-for="NomeProd" class="control-label"></label>
                <input asp-for="NomeProd" class="form-control" />
                <span asp-validation-for="NomeProd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecoProd" class="control-label"></label>
                <input asp-for="PrecoProd" class="form-control" />
                <span asp-validation-for="PrecoProd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescricaoProd" class="control-label"></label>
                <input asp-for="DescricaoProd" class="form-control" />
                <span asp-validation-for="DescricaoProd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QtdProd" class="control-label"></label>
                <input asp-for="QtdProd" class="form-control" />
                <span asp-validation-for="QtdProd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoriaProd" class="control-label"></label>
                <select asp-for="CategoriaProd" asp-items="Html.GetEnumSelectList<Categoria>()" class="form-control"><option>Selecione</option></select>
                <span asp-validation-for="CategoriaProd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FornecedorId" class="control-label"></label>
                <select asp-for="FornecedorId" class="form-control" asp-items="ViewBag.FornecedorId"><option>Selecione</option></select>
            </div>
            <div class="form-group pb-4">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a class="btn btn-outline-info" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
