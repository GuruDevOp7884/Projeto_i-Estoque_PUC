    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomeProd)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeProd)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PrecoProd)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PrecoProd)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DescricaoProd)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DescricaoProd)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.QtdProd)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.QtdProd)
        </dd>
        <dt class = "col-sm-2">
