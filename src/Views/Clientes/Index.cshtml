@model IEnumerable<ControleDeEstoque.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}
@section css {
        <link rel="stylesheet" href="~/css/views.css" asp-append-version="true" />
}

<h2>Clientes</h2>
     <hr />
<p>
    <a class="btn btn-primary" asp-action="Create">Adicionar</a>
</p>
<div id="tabela">
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeOuRazaoSocial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EnderecoCliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CidadeCliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UfCliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodigoCliente)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeOuRazaoSocial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnderecoCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CidadeCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UfCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoCliente)
            </td>
            <td>
                <a class="botoes-tabelas text-decoration-none" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                <a class="botoes-tabelas text-decoration-none" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                <a class="botoes-tabelas text-decoration-none" asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
